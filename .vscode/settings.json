{
  // Enable VSCode eslint extension supports for flat config.
  "eslint.experimental.useFlatConfig": true,

  // File nesting.
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.d.ts,${capture}.js,${capture}.*js,${capture}.test.ts",
    "*.js": "${capture}.test.js",
    "package.json": "package-lock.json,pnpm-lock.yaml,yarn.lock",
    "pnpm-lock.yaml": "pnpm-workspace.yaml",
    "eslint.config.js": ".eslintignore",
    "prettier.config.js": ".prettierignore",
    "readme.md": "changelog.md,license.txt,license,code_of_conduct.md"
  },

  // Code formatters.
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {"source.organizeImports": "always"},
  "[go]": {"editor.defaultFormatter": "golang.go"},
  "[go.mod]": {"editor.defaultFormatter": "golang.go"},
  "[go.work]": {"editor.defaultFormatter": "golang.go"}
}
